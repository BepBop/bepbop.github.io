<div
  id="project_slider"
  class="slider"
  style="background-image: url('/img/projects.svg');"
>
</div>

<style>
  #project_slider {
    z-index: 999;
    position: relative;
  }
</style>

<script>
  let animationFrameId = null;

  function startProjectSlider() {
    const projectSlider = document.getElementById("project_slider");
    if (!projectSlider) return;

    if (animationFrameId) cancelAnimationFrame(animationFrameId);

    let scrollPosition = 0;

    function animateSlider() {
      scrollPosition -= 2;
      projectSlider.style.backgroundPositionX = `${scrollPosition}px`;
      animationFrameId = requestAnimationFrame(animateSlider);
    }

    animationFrameId = requestAnimationFrame(animateSlider);
  }

  startProjectSlider();
  document.addEventListener("astro:page-load", startProjectSlider);
</script>
