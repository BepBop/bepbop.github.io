<div
  id="skill_slider"
  class="slider"
  style="background-image: url('/img/skills.svg');"
>
</div>

<script>
  let skillSliderFrame = null;

  function startSkillSlider() {
    const skillSlider = document.getElementById("skill_slider");
    if (!skillSlider) return;

    // Prevent multiple animation loops after repeated navigations
    if (skillSliderFrame) cancelAnimationFrame(skillSliderFrame);

    let scrollPosition = 0;

    function animateSlider() {
      scrollPosition += 2;
      skillSlider.style.backgroundPositionX = `${scrollPosition}px`;
      skillSliderFrame = requestAnimationFrame(animateSlider);
    }

    skillSliderFrame = requestAnimationFrame(animateSlider);
  }

  // Run once on first page load
  startSkillSlider();

  // Re-run after every Astro client-side navigation
  document.addEventListener("astro:page-load", startSkillSlider);
</script>
