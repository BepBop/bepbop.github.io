  .content-layout__main-panel {
    flex: 1 1 480px;

    & > * {
      border-top: 1px solid var(--border-color);
      padding: 36px 4px 64px 4px;
    }

    & .content-layout__main-panel-content {
      font-size: var(--font-size-6);
      display: flex;
      flex-wrap: wrap;
      row-gap: 20px;
      column-gap: 64px;
      line-height: 1.6;

      & .content-layout__main-panel-content-left {
        width: 280px;
      }

      & .content-layout__main-panel-content-left p {
        color: var(--border-color);
        margin: 8px 0 !important;
      }

      & .content-layout__main-panel-content-right {
        flex: 1 0 300px;

        & ul {
          margin-top: 0;
          padding-left: 20px;
        }

        & ul li {
          margin-bottom: 16px;
        }
      }
    }
  }

  .opacity {
    display: none;
  }

  #initial,
  #final {
    view-transition-name: my-box;
  }

  ::view-transition-new(my-box) {
    animation: fade-in 0.25s ease-out;
  }

  @keyframes fade-in {
    from {
      opacity: 0;
    }
  }

  #final > div.content-layout__main-panel-content {
    font-size: var(--font-size-7);
  }

  @media (width < 1000px) {

    .content-layout__sidebar {
      width: 100%;
      position: unset;
    }

    #initial > div:nth-child(1) {
      border-top: 0;
    }

    #section-2-2025 {
      gap: 0;
    }
  }


</style>
</html>

<script>
  function initToggle() {
    const toggleButton = document.querySelector("#section-1-2025 > button");
    if (!toggleButton || toggleButton.dataset.bound) return;
    toggleButton.dataset.bound = "true";

    const initial = document.querySelector("#initial");
    const final = document.querySelector("#final");

    toggleButton.addEventListener("click", () => {
      document.startViewTransition(() => {
        initial.classList.toggle("opacity");
        final.classList.toggle("opacity");

        toggleButton.textContent =
          toggleButton.textContent === "Experience" ? "About" : "Experience";
      });
    });
  }

  // ✅ Run once on initial page load
  initToggle();

  // ✅ Run again on every Astro client-side navigation
  document.addEventListener("astro:page-load", initToggle);

</script>
