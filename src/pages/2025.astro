    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1.2rem 4px;
    font-size: 16px;
    border-bottom: 1px solid var(--border-color);
  }

  .tag-list {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.75rem 1.25rem;
    padding: 0;
    margin: 0;
    list-style: none;
    font-size: 16px;

