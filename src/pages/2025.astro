    flex-shrink: 0;
    height: fit-content;
    position: sticky;
    top: 32px;
  }

  .info-card {
    font-weight: 300;
    line-height: 1.5;
    border-top: 1px solid var(--border-color);
    padding: 36px 4px 56px 4px;

